<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VillalbaJuanJose.MainPage">
    <StackLayout Padding="20" VerticalOptions="Center">
        <Image
    Source="movistar.png"
    HeightRequest="185"
    Aspect="AspectFit"
    SemanticProperties.Description="dot net bot in a race car number eight" />
        <Label x:Name="vjj_label1" Text="Numero telefononico:" FontSize="Medium"/>
        <Entry x:Name="vjj_entrytelefono" Placeholder="Ingresa tu numero telefonico" Keyboard="Telephone"/>
        <Label x:Name="vjj_label2" Text="Ingrese el nombre de quien realiza la recarga:" FontSize="Medium"/>
        <Entry x:Name="vjj_entrynombre" Placeholder="Ingresa tu nombre completo"/>
        <Button x:Name="vjj_buttomRecargar" Text="Realizar Recarga" Clicked="OnRecargarClicked"/>
        <Label x:Name="vjj_label3" Text="Ultima recarga" FontSize="Medium" Margin="10,20,10,0"/>
        <Label x:Name="vjj_labelResultado" FontSize="Large" Text="UltimaRecarga"/>
    </StackLayout>
    

</ContentPage>
